<Window x:Class="RealTimeRayTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeRayTracer"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <!-- Image for displaying the rendered WriteableBitmap -->
        <Image x:Name="displayImage" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!-- TextBlock to display render time, positioned at the top-right -->
        <TextBlock x:Name="renderTimeText"
                   Text="Initializing..."
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="10"
                   FontSize="16"
                   Foreground="White"
                   Background="Black"
                   Padding="5"/>
    </Grid>
</Window>
